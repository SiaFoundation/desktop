{
  "name": "hostd",
  "version": "0.29.0",
  "license": "MIT",
  "private": true,
  "description": "The hostd desktop app",
  "author": {
    "name": "The Sia Foundation",
    "email": "hello@sia.tech"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SiaFoundation/desktop.git"
  },
  "main": "dist/main/index.js",
  "scripts": {
    "clean": "rimraf daemon/bin out dist renderer/.next",
    "fresh": "npm run clean && rimraf node_modules",
    "dev": "npm run build:main && electron .",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "next build renderer",
    "build:main": "tsc -p main",
    "lint": "eslint --max-warnings=0",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "icons": "npx electron-icon-builder --flatten --input=assets/appicon.png --output=temp && npm run icons:copy && npm run icons:cleanup",
    "icons:copy:linux": "cp temp/icons/512x512.png assets/icons/icon.png",
    "icons:copy:win": "cp temp/icons/icon.ico assets/icons/icon.ico",
    "icons:copy:mac": "cp temp/icons/icon.icns assets/icons/icon.icns",
    "icons:copy": "npm run icons:copy:linux && npm run icons:copy:win && npm run icons:copy:mac",
    "icons:cleanup": "rimraf temp"
  },
  "dependencies": {
    "@fastify/deepmerge": "^3.1.0",
    "@octokit/rest": "^22.0.0",
    "@siafoundation/design-system": "^10.0.0",
    "@siafoundation/react-core": "^7.0.0",
    "@siafoundation/react-icons": "^0.3.2",
    "@technically/lodash": "^4.17.0",
    "adm-zip": "^0.5.16",
    "app-root-path": "^3.1.0",
    "axios": "^1.11.0",
    "bignumber.js": "^9.3.1",
    "bip39": "^3.1.0",
    "class-variance-authority": "^0.7.1",
    "electron-is-dev": "^3.0.1",
    "electron-squirrel-startup": "^1.0.1",
    "js-yaml": "^4.1.0",
    "react": "^19.1.1",
    "react-dom": "19.1.1",
    "react-hook-form": "^7.62.0",
    "swr": "^2.3.4",
    "update-electron-app": "^3.1.1",
    "use-local-storage-state": "^19.5.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.2",
    "@electron-forge/maker-deb": "^7.8.2",
    "@electron-forge/maker-dmg": "^7.8.2",
    "@electron-forge/maker-rpm": "^7.8.2",
    "@electron-forge/maker-squirrel": "^7.8.2",
    "@electron-forge/maker-zip": "^7.8.2",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.2",
    "@electron-forge/publisher-github": "^7.8.2",
    "@electron-forge/publisher-s3": "^7.8.2",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.32.0",
    "@types/adm-zip": "^0.5.7",
    "@types/appdmg": "^0.5.5",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "24.2.0",
    "@types/react": "19.1.9",
    "@types/react-dom": "19.1.7",
    "autoprefixer": "^10.4.21",
    "electron": "^37.2.5",
    "eslint": "^9.32.0",
    "eslint-config-next": "15.4.5",
    "globals": "^16.3.0",
    "next": "15.4.5",
    "postcss": "^8.5.6",
    "rimraf": "^6.0.1",
    "typescript": "5.9.2",
    "typescript-eslint": "^8.39.0"
  }
}
