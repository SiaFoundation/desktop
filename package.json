{
  "name": "desktop",
  "version": "0.0.0",
  "description": "The desktop apps",
  "packageManager": "bun@1.2.19",
  "engines": {
    "node": ">=22.12.0"
  },
  "author": {
    "name": "The Sia Foundation",
    "email": "hello@sia.tech"
  },
  "scripts": {
    "fresh": "bunx rimraf node_modules */node_modules */daemon/bin */out */dist */renderer/.next",
    "release": "bunx changeset publish",
    "download:renterd": "cd renterd && bun run download:binary -- --auto",
    "download:hostd": "cd hostd && bun run download:binary -- --auto",
    "download:walletd": "cd walletd && bun run download:binary -- --auto",
    "download:all": "bun run download:renterd && bun run download:hostd && bun run download:walletd",
    "dev:renterd": "cd renterd && bun run dev",
    "dev:hostd": "cd hostd && bun run dev",
    "dev:walletd": "cd walletd && bun run dev",
    "scripts": "tsc -p scripts"
  },
  "private": true,
  "workspaces": [
    "renterd",
    "hostd",
    "walletd"
  ]
}
