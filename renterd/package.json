{
  "name": "renterd",
  "version": "0.0.1",
  "description": "The renterd desktop app",
  "author": {
    "name": "The Sia Foundation",
    "email": "hello@sia.tech"
  },
  "main": "main/index.js",
  "scripts": {
    "clean": "rimraf dist main renderer/out renderer/.next",
    "dev": "npm run build-electron && electron .",
    "build-renderer": "next build renderer",
    "build-electron": "tsc -p electron-src",
    "build": "npm run build-renderer && npm run build-electron",
    "pack-app": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "type-check": "tsc -p ./renderer/tsconfig.json && tsc -p ./electron-src/tsconfig.json"
  },
  "dependencies": {
    "@fastify/deepmerge": "^1.3.0",
    "@octokit/rest": "^20.0.2",
    "@siafoundation/design-system": "^2.0.5",
    "@siafoundation/react-core": "^1.0.2",
    "@siafoundation/react-icons": "^0.2.2",
    "adm-zip": "^0.5.10",
    "axios": "^0.27.2",
    "bignumber.js": "^9.1.2",
    "bip39": "^3.1.0",
    "class-variance-authority": "^0.7.0",
    "electron-is-dev": "^1.2.0",
    "electron-next": "^3.1.5",
    "js-yaml": "^4.1.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hook-form": "^7.49.0",
    "swr": "^2.2.4",
    "use-local-storage-state": "^18.3.3"
  },
  "devDependencies": {
    "@types/node": "18.15.11",
    "@types/react": "18.2.24",
    "@types/react-dom": "18.2.9",
    "@types/adm-zip": "^0.5.5",
    "@types/js-yaml": "^4.0.9",
    "postcss": "^8.4.31",
    "electron": "^27.1.2",
    "electron-builder": "^24.9.1",
    "eslint": "8.37.0",
    "eslint-config-next": "13.3.0",
    "autoprefixer": "^10.4.16",
    "next": "13.5.2",
    "rimraf": "^3.0.2",
    "typescript": "5.0.3"
  },
  "build": {
    "icon": "assets/appicon.png",
    "asar": true,
    "files": [
      "main",
      "renderer/out",
      "assets"
    ]
  }
}
